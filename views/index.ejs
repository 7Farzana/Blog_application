<%- include('partials/header.ejs') %>

<main class="container">
    <div class="row g-5">
        <div class="col-md-8">
            <h3 class="pb-4 mb-4 fst-italic border-bottom">
                LATEST POSTS
            </h3>
           
            <% posts.forEach((post) => { %>
            <article class="blog-post">
                <h2 class="display-5 link-body-emphasis mb-1"><a class="link-secondary" href="/post/<%= post.id %>"><%= post.title %></a></h2>
                <p class="blog-post-meta"><%= post.date %></p>
                <p><%- post.body %></p>
            </article>
            <% }) %>
        </div>

    
